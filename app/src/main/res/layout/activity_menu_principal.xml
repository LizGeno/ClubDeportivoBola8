<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B2DCE8"
    android:padding="16dp">

    <!-- Contenedor interno (bloque2) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/bloque2_background"
        android:layout_gravity="center"
        android:padding="24dp">

        <!-- Flecha volver -->
        <ImageButton
            android:id="@+id/btnBackMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@null"
            android:layout_marginBottom="16dp"
            app:tint="#FFFFFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué desea hacer?"
            android:textColor="#FFFFFF"
            android:textSize="33sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"/>

        <!-- Espaciador superior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <!-- Botón Socio -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocio"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="REGISTRAR SOCIO"
            android:textColor="#000000"
            android:background="@drawable/button_background"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:textSize="16sp"/>

        <!-- Botón Pagar Cuota -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPagarCuota"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="PAGAR CUOTA"
            android:textColor="#000000"
            android:background="@drawable/button_background"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:textSize="16sp"/>

        <!-- Botón Actividades No Socios -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnActividadesNoSocios"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ACTIVIDADES (NO SOCIOS)"
            android:textColor="#000000"
            android:background="@drawable/button_background"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:textSize="16sp"/>

        <!-- Botón Lista de Cuotas -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnListaCuotas"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="LISTA DE CUOTAS"
            android:textColor="#000000"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:textSize="16sp"/>

        <!-- Espaciador inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

    </LinearLayout>

</LinearLayout>