<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginBottom="6dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvSocioNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del socio"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvActividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad: FÃºtbol"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tvVencimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vence: 10/10/2025"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tvEstadoCuota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado: Vencida"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"/>

</LinearLayout>

