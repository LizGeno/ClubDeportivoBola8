<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#B2DCE8"
    tools:context=".ListadoCuotasActivity"
    android:id="@+id/main" >

    <!-- Contenedor interno -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/bloque2_background"
        android:layout_gravity="center"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloListadoCuotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listado de Cuotas"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <!-- Filtro de cuotas -->
        <Spinner
            android:id="@+id/spFiltroCuotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_spinner"
            android:minHeight="48dp"
            android:padding="12dp"
            android:entries="@array/opciones_filtro_cuotas" />

        <!-- Lista de cuotas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListadoCuotas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:scrollbars="vertical"
            tools:listitem="@layout/item_cuota" />
        <Button
            android:id="@+id/btnVolverMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver al Menú Principal"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="24dp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium" />

        <!-- Espaciador inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />


    </LinearLayout> <!-- cierre del contenedor interno -->

</LinearLayout> <!-- cierre del layout principal -->
