<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B2DCE8"
    android:padding="16dp"
    tools:context=".LoginActivity">

    <!-- Contenedor interno (Bloque2) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/bloque2_background"
        android:layout_gravity="center"
        android:padding="24dp">

        <!-- Título centrado arriba -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Club Deportivo Bola 8"
            android:textColor="#FFFFFF"
            android:textSize="33sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"/>

        <!-- Espaciador flexible para empujar contenido al medio -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Texto descriptivo en el medio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión de socios y actividades"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:layout_marginBottom="48dp"/> <!-- Espacio lógico antes de botones -->

        <!-- Botón Iniciar Sesión -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textColor="#000000"
            android:background="@drawable/button_background"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"/>

        <!-- Botón Registrarse -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:textColor="#000000"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"/>

        <!-- Espaciador inferior para balancear -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>